<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
<_locDefinition xmlns="urn:locstudio">
    <_locDefault _loc="locNone" />
    <_locTag _loc="locData">Title</_locTag>
    <_locTag _loc="locData">Description</_locTag>
    <_locTag _loc="locData">Author</_locTag>
    <_locTag _loc="locData">ToolTip</_locTag>
   <_locTag _loc="locData">Default</_locTag>
</_locDefinition>
	<CodeSnippet Format="1.0.0">
		<Header>
			<Title>Create a standard SELECT All statement</Title>
                        <Shortcut></Shortcut>
			<Description>Code Snippet for a SELECT All statement with WHERE and ORDER BY keywords.</Description>
			<Author>Asel Sathkumara</Author>
			<SnippetTypes>
                                <SnippetType>Expansion</SnippetType>
			</SnippetTypes>
		</Header>
		<Snippet>
			<Declarations>
                                <Literal>
                                	<ID>table</ID>
                                	<ToolTip>Provide the name of the table you wish to query</ToolTip>
                                	<Default>[table_name]</Default>
                                </Literal>
								<Literal>
                                	<ID>search_condition</ID>
                                	<ToolTip>Provide the search condition</ToolTip>
                                	<Default>(search_condition)</Default>
                                </Literal>
								<Literal>
                                	<ID>order_by_expression</ID>
                                	<ToolTip>Provide the order by expression</ToolTip>
                                	<Default>(order_by_expression)</Default>
                                </Literal>
								<Literal>
                                	<ID>sort_order</ID>
                                	<ToolTip>Specify either ASC or DESC as your sort order</ToolTip>
                                	<Default>[ASC|DESC]</Default>
                                </Literal>
			</Declarations>
			<Code Language="SQL"><![CDATA[
SELECT * 
FROM $table$
WHERE $search_condition$
ORDER BY $order_by_expression$ $sort_order$;
]]>
			</Code>
		</Snippet>
	</CodeSnippet>
</CodeSnippets>
